<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/blueactmain"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/mainLeft_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parent Control App"
        android:layout_marginBottom="250dp"

        />


    <TextView
        android:id="@+id/mainText_view"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Parent Control App"
        android:textSize="34dp"

        />

    <TextView
        android:id="@+id/subText_view"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="A digital way to keep track of your children" />


    <Button
        android:id="@+id/parent_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:text="Join as a parent" />

    <Button
        android:id="@+id/child_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Join as a child"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"

        />

</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/cp2"
    tools:context=".MainActivity">




    <TextView
        android:id="@+id/mainText_view"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Parent Control App"
        android:textSize="34dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/subText_view"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="A digital way to keep track of your children" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/parent_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:background="@drawable/main_gradient_button"
            android:text="Join as a parent"
            android:textColor="@color/white" />

        <android.widget.Button
            android:id="@+id/child_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/main_gradient_button"
            android:text="Join as a child"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>



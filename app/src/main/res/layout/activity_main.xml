<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/cp1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainText_view"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Parent Control App"
        android:textStyle="bold"
        android:textSize="34dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/subText_view"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="A digital way to keep track of your children"
        android:textStyle="italic"
        android:textColor="@color/white"
        />

    <android.widget.Button
        android:id="@+id/getStarted_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="90dp"
        android:layout_gravity="center_horizontal"
        android:text="GET STARTED"
        android:textColor="@color/white"
        android:background="@drawable/main_gradient_button"
        />


</LinearLayout>